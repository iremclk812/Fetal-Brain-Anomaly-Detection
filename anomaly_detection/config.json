    "preprocessing": {
        "image_size": 224,
        "augmentation": {
            "rotation_range": 20,
            "width_shift_range": 0.2,
            "height_shift_range": 0.2,
            "horizontal_flip": true,
            "color_jitter_brightness": 0.2,
            "color_jitter_contrast": 0.2,
            "color_jitter_saturation": 0.2,
            "color_jitter_hue": 0.2,
            "clahe_clip_limit": 2.0,
            "n_augmentations_train": 3
        }
    },
    "model": {
        "architecture": "FetalCLIP-EfficientNet-Hybrid",
        "fetalclip_frozen": true,
        "efficientnet_variant": "efficientnet_b0",
        "freeze_first_n_layers": 100,
        "dense_units": 512,
        "dropout_rate": 0.5,
        "use_fetalclip_embeddings": true
    },
    "training": {
        "batch_size": 16,
        "epochs": 100,
        "learning_rate": 0.001,
        "optimizer": "adam",
        "loss": "categorical_crossentropy",
        "early_stopping_patience": 15,
        "reduce_lr_patience": 10,
        "train_val_split": 0.75
    }
