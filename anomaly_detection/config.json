        "hc18_dir": "C:/Users/iremc/Desktop/Fetal-Brain-Anomaly-Detection/1327317",
        "hc18_annotation_csv": "C:/Users/iremc/Desktop/Fetal-Brain-Anomaly-Detection/1327317/training_set_pixel_size_and_HC.csv",
        "dir_preprocessed": "preprocessed_data",
        "dir_experiment_logs": "experiment_logs",
        "path_fetalclip_config": "../FetalCLIP_config.json",
        "path_fetalclip_weight": "../FetalCLIP_weights.pt"
